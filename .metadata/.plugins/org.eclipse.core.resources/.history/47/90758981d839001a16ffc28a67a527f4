
public class Calculator {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		char operatorMath = '+';
		double num1 = 7.0;
		double num2 = 24.5;
		double result;
		// 6 % 3 = 0
		// 50 % 24,5 = 1.0
			
		if(operatorMath == '+'){
			result = num1 + num2;
			System.out.println(result);
		}else if(operatorMath == '/'){
			result = num1 / num2;
			System.out.println(num1 / num2);
		}else if(operatorMath == '*'){
			result = num1 * num2;
			System.out.println(num1 * num2);
		}else if(operatorMath == '-'){
			result = num1 - num2;
			System.out.println(num1 - num2);
		}else if(operatorMath == '%'){
			result = num1 % num2;
			System.out.println(num1 % num2);
						
			
		}else{
			System.out.println("Wrong data");
		}
	}

}
