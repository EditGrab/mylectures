
public class Calculator {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		char operatorMath = '%';
		double num1 = 50.0;
		double num2 = 24.5;
		
		// 6 % 3 = 0
		// 50 % 24,5 = 1.0
			
		if(operatorMath == '+'){
			System.out.println(num1 + num2);
		}else if(operatorMath == '/'){
			System.out.println(num1 / num2);
		}else if(operatorMath == '*'){
			System.out.println(num1 * num2);
		}else if(operatorMath == '-'){
			System.out.println(num1 - num2);
		}else if(operatorMath == '%'){
			System.out.println(num1 % num2);
			
		}else{
			System.out.println("Wrong data");
		}
	}

}
